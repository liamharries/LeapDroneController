<Window x:Class="LeapDroneController.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeapDroneController"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DockPanel Dock="Right">
            <StackPanel>
                <Button x:Name="btnFly" Click="BtnFly_OnClick">Fly</Button>
                <Button x:Name="btnFinish" Click="BtnFinish_OnClick">Stop</Button>
                <Label>X</Label>
                <TextBlock Text="{Binding XAxisValue}"/>
                <Label>Y</Label>
                <TextBlock Text="{Binding YAxisValue}"/>
                <Label>Z</Label>
                <TextBlock Text="{Binding ZAxisValue}"/>
                <Label>Heading</Label>
                <TextBlock Text="{Binding Heading}"/>
                <Label>Action</Label>
                <TextBlock Text="{Binding CurrentAction}"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
